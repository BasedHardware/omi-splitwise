# Splitwise OAuth Credentials
# Get these from https://secure.splitwise.com/apps
SPLITWISE_CONSUMER_KEY=your_consumer_key
SPLITWISE_CONSUMER_SECRET=your_consumer_secret

# Redirect URI - Update this to your Railway URL after deployment
# Local: http://localhost:8080/auth/splitwise/callback
# Railway: https://your-app.up.railway.app/auth/splitwise/callback
SPLITWISE_REDIRECT_URI=http://localhost:8080/auth/splitwise/callback

# Server Port (Railway sets PORT automatically)
PORT=8080

# Redis URL (Railway provides this automatically when you add Redis)
# Leave empty for local development (uses file-based storage)
REDIS_URL=
